{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "amd": true
    },
    "globals": {
        "ENV": true
    },
    "extends": "eslint:recommended",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "babelOptions": {
            "configFile": "./.babelrc"
        }
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
  }